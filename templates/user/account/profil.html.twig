            {#                    <hr>#}
            {#                    {{ form_row(form.avatar) }}#}
            {#                </div>#}
            {#            </div>#}
        </div>
        <div class="row">
            <div class="col-12">
                <div class="alert alert-light text-center">
                    <p>Si vous avez terminé vos modifications, vous pouvez sauvegarder.</p>
                    <button type="submit" class="btn btn-primary">
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
