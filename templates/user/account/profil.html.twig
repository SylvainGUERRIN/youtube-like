{% extends 'user/partials/base.html.twig' %}
{% block title %}Modification de profil{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center blue-title">Modifications du profil</h1>
        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading text-center blue-title">Informations générales</h2>
                    <hr>
                    {{ form_row(form.username) }}
                    {{ form_row(form.mail) }}
                </div>
            </div>
